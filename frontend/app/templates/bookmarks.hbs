{{#if controller.length}}
<ul class="bookmark-list">
  {{#each controller}}
    <li>
      {{#link-to 'bookmarks.bookmark' this}}
        {{url}}
      {{/link-to}}
    </li>
  {{/each}}
</ul>
{{/if}}

{{controller.length}} bookmarks found.

<form class="new-bookmark-form">
  <h4>Add new bookmark</h4>

  <label class="url">
    URL
    {{input valueBinding="newBookmarkURL" class="url" type="url"}}
  </label>

  <br />
  <button {{action 'saveNewBookmark'}} class="primary-action save">
    Save new bookmark
  </button>
</form>

{{outlet}}
